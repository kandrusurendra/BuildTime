<UserControl x:Class="Microsoft.Samples.VisualStudio.IDE.ToolWindow.BuildTimerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Samples.VisualStudio.IDE.ToolWindow"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <StackPanel HorizontalAlignment="Stretch" Margin="5,5,5,5" VerticalAlignment="Stretch">
        <TabControl VerticalAlignment="Top" Height="400" Margin="5">
            <TabItem Header="Build output">
                <DataGrid Name="BuildInfoGrid" Margin="1" Grid.ColumnSpan="2"/>
            </TabItem>
            <TabItem Header="Build graph"></TabItem>
        </TabControl>
        <Button Content="Update build times" Click="OnUpdateBuildTimesBtnClick" Margin="5" Width="200"></Button>
    </StackPanel>
